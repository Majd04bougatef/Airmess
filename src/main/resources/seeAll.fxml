<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SeeAll" stylesheets="/css/style.css">
    <children>
        <!-- Titre de la page -->
        <Label text="Tous les Commentaires" styleClass="page-title" layoutX="20" layoutY="20"/>

        <!-- Section pour afficher les commentaires -->
        <VBox fx:id="commentsList" spacing="10" layoutX="20" layoutY="50" styleClass="comments-list" prefWidth="400" prefHeight="400">
            <!-- Les commentaires seront chargés ici dynamiquement -->
        </VBox>

        <!-- Bouton pour revenir à la page précédente -->
        <Button text="Retour" layoutX="20" layoutY="470" onAction="#goBackToPreviousPage" styleClass="back-button"/>
    </children>
</AnchorPane>
