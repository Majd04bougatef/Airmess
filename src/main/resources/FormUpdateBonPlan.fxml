<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="640.0" prefWidth="1030.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.FormUpdateBonPlan">
    <children>
        <Pane fx:id="form" layoutX="48.0" layoutY="42.0" prefHeight="556.0" prefWidth="935.0"
              style="-fx-background-color: #f3f3f3; -fx-background-radius: 30px;">
            <children>
                <Text fx:id="text1" layoutX="262.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      styleClass="form-title" text="Modifier un Bon Plan" wrappingWidth="410.13671875">
                    <font>
                        <Font name="Arial Black" size="23.0" />
                    </font>
                </Text>
                <TextField fx:id="idBonPlan" visible="false" />

                <Text fx:id="textTitre" layoutX="66.0" layoutY="109.0" text="Nom de l'endroit" />
                <TextField fx:id="name" layoutX="66.0" layoutY="124.0" prefHeight="35.0" prefWidth="364.0"
                           promptText="Entrez un nom" />

                <Text fx:id="textTitre2" layoutX="66.0" layoutY="190.0" text="Description " />
                <TextField fx:id="DescriptionBP" layoutX="66.0" layoutY="205.0" prefHeight="32.0" prefWidth="364.0"
                           promptText="Entrez une description" />

                <Text fx:id="textTitre1" layoutX="66.0" layoutY="274.0" text="Localisation" />
                <TextField fx:id="LocalistionBP" layoutX="66.0" layoutY="291.0" prefHeight="32.0" prefWidth="364.0"
                           promptText="Entrez une localisation" />

                <Text fx:id="textTitre11" layoutX="66.0" layoutY="367.0" text="Type de lieu" />
                <SplitMenuButton fx:id="type" layoutX="66.0" layoutY="380.0" prefHeight="35.0" prefWidth="364.0"
                                 text="Choisir un type">
                    <items>
                        <MenuItem fx:id="resto" text="resto" />
                        <MenuItem fx:id="coworkingspace" text="coworkingspace" />
                        <MenuItem fx:id="cafe" text="cafe" />
                        <MenuItem fx:id="musee" text="musé" />
                    </items>
                </SplitMenuButton>

                <Button fx:id="bttnBP" layoutX="66.0" layoutY="450.0" prefHeight="37.0" prefWidth="780.0"
                        styleClass="submit-button" text="Modifier" onAction="#updateBonPlan" />

                <!-- ImageView et WebView placés côte à côte -->
                <ImageView fx:id="imgPB" fitHeight="215.0" fitWidth="244.0" layoutX="510.0" layoutY="124.0"
                           pickOnBounds="true" preserveRatio="true" />

                <WebView fx:id="mapView" layoutX="770.0" layoutY="124.0" prefWidth="300.0" prefHeight="215.0" />

                <Button fx:id="addImageButton" layoutX="550.0" layoutY="364.0" prefHeight="32.0" prefWidth="139.0"
                        text="Changer Image" onAction="#addImageBP" />
            </children>
        </Pane>
    </children>
</AnchorPane>
