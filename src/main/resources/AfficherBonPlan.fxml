<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherBonPlan" stylesheets="/css/style.css">
    <children>
        <!-- ScrollPane pour permettre le dÃ©filement -->
        <ScrollPane layoutX="14.0" layoutY="14.0" prefWidth="600.0" prefHeight="500.0">
            <content>
                <!-- FlowPane pour afficher les cartes -->
                <FlowPane fx:id="flowPaneBonPlans" hgap="20" vgap="20" style="-fx-padding: 10;">
                    <!-- Exemple de carte de bon plan -->
                    <VBox fx:id="bonPlanCard" prefWidth="250.0" prefHeight="300.0" styleClass="bonplan-card">
                        <ImageView fx:id="imageBP" fitHeight="150" fitWidth="250" />
                        <Label fx:id="nameLabel" text="Nom du Bon Plan" styleClass="bonplan-title label-bold" />
                        <Label fx:id="descriptionLabel" text="Description" styleClass="bonplan-description label-bold" />
                    </VBox>
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
