<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.ReservationDialog"
           styleClass="dialog-pane">
<VBox spacing="15" alignment="CENTER">
    <Label fx:id="titleLabel" styleClass="dialog-title" text="Réservation confirmée !" />
    <Label fx:id="messageLabel" styleClass="dialog-message" text="Votre réservation a été enregistrée." />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="confirmButton" text="OK" onAction="#closeDialog" styleClass="dialog-button" />
    </HBox>
</VBox>
</StackPane>