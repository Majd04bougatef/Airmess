<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservationController">
    <Label fx:id="stationNameLabel" text="Nom de la station" />

    <Label text="Date de début :" />
    <DatePicker fx:id="dateResPicker"/>

    <Label text="Date de fin :" />
    <DatePicker fx:id="dateFinPicker"/>

    <Label text="Prix :" />
    <TextField fx:id="prixField" promptText="Entrez le prix"/>

    <Label text="Statut :" />
    <TextField fx:id="statutField" promptText="Statut de la réservation"/>

    <Button text="Confirmer la réservation" onAction="#confirmReservation"/>
</VBox>
